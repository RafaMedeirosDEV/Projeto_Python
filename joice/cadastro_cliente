from tkinter import *
from tkinter import ttk
import psycopg2

janela = Tk()

def abri_conexao(self):
    self.conexao = psycopg2.connect(database = "postgres", user = "postgres", password = "2030", host = "127.0.0.1", port = "5432")
    self.cursor = self.conexao.cursor()
    self.cursor.execute('''CREATE TEBLE CADASTRO(
                            cpf INT(11) PRIMARY KEY NOT NULL,
                            nome TEXT(15) NOT NULL,
                            sobrenome TEXT(15),
                            telefone INT(11),
                            end TEXT(25),
                            numero INT(5),
                            bairro TEXT(20),
                            cidade TEXT(20) NOT NULL,
                            data DATE,
                            descricao TEXT(40);''')
    print('Tabela Criada!')
    self.conexao.commit()
    self.conexao.close()


class Janela():
    def __init__(self):
        self.abrir_conexao()



Janela.mainloop()






